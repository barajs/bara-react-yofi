{
  "name": "bara-react-yofi",
  "description": "Collection of beautiful React components work with Bara cross-platform",
  "version": "0.0.0",
  "license": "MIT",
  "private": false,
  "scripts": {
    "compile": "tsc -b ./tsconfig.lib.json",
    "compile:watch": "tsc -b ./tsconfig.lib.json -w",
    "compile:website": "cd website && yarn build",
    "start:website": "cd website && yarn start",
    "start:react": "react-scripts start",
    "start": "yarn compile && run-p compile:watch start:website",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "postinstall": "cd website && yarn install --frozen-lockfile",
    "build": "run-s compile compile:website",
    "commit": "git-cz"
  },
  "dependencies": {
    "bara": "2.4.0",
    "bara-react": "3.0.0",
    "bara-react-icons": "1.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-native-web": "0.11.2"
  },
  "devDependencies": {
    "@types/jest": "24.0.11",
    "@types/node": "11.13.8",
    "@types/react": "16.8.14",
    "@types/react-dom": "16.8.4",
    "@types/react-native": "0.57.50",
    "commitizen": "3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "npm-run-all": "4.1.5",
    "react-scripts": "3.0.0",
    "typescript": "3.4.5"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
